<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spellLinerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVSpellName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/pading"
            android:paddingTop="@dimen/pading"
            android:text="TextView"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkBoxSpell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVSpellLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/pading"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tVSpellSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/pading"
            android:text="TextView"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/tVSpellSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="end"
        android:paddingRight="@dimen/pading"
        android:text="TextView" />

</LinearLayout>